@model IEnumerable<PaymentRecondIndexViewModel>
@{ViewBag.Title = "Payroll List" ;}

<div class="row">
    <div class="col-md-12 grid-margin">
        <div class="card">
            <div class="card-body">
                <nav aria-label="breadcrumb">
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item"><a asp-controller="Home" asp-action="Index">Home</a></li>
                        <li class="breadcrumb-item active" aria-current="page">Payroll List</a></li>
                    </ol>
                </nav><br /> <br />
                <div class="row">
                    <div class="col-md-12 table-responsive-md">
                        <a class="btn btn-md btn-outline-success float-md-right" asp-action="Create">New Pay</a>
                        <table class="table table-stiped">
                            <thead>
                                <tr>
                                    <th>FullName</th>
                                    <th>PayDate</th>
                                    <th>Month</th>
                                    <th>Tax Year</th>
                                    <th>Total Earnings </th>
                                    <th>Total Deductionss</th>
                                    <th>Net Payment</th>
                                    <th class="text-warning">Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>
                                            <a asp-action="Detail" asp-route-id="@item.Id">
                                                @item.FullName
                                            </a>
                                        </td>
                                        <td>
                                            @item.PayDate.ToString("dd/MM/yyyy")
                                        </td>
                                        <td>@item.Paymonth</td>
                                        <td>@item.Year</td>
                                        <td>@item.TotalEarnings.ToString("C")</td>
                                        <td>@item.TotalDeductions.ToString("C")</td>
                                        <td>@item.NetPayment.ToString("c")</td>
                                      
                                        <td>
                                            <a class="text-success" asp-action="Paysip" asp-route-id="@item.Id">
                                                <i class="fas fa-bars"></i>
                                                Preview Payslip
                                            </a>
                                        </td>
                                        <td>
                                            <a class="text-danger" asp-action="PrintPayslip" asp-route-id="@item.Id">
                                                <i class="fas fa-file-pdf"></i>
                                                Print Payslip
                                            </a>
                                        </td>

                                    </tr>

                                }
                            </tbody>
                        </table>
                        @*@{
                        var disablePrevious = !Model.IsPreviewPageAvailable ? "disabled" : " ";
                        var disableNext = !Model.IsNexPageAvailable ? "disabled" : " ";
                        }

                        <a asp-action="Index"
                        asp-route-pageNumber="@(Model.PageIndex - 1)"
                        class="btn btn-primary @disablePrevious ">
                        Previous
                        </a>
                        <a asp-action="Index"
                        asp-route-pageNumber="@(Model.PageIndex + 1)"
                        class="btn btn-primary @disableNext ">
                        Next
                        </a>*@
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>