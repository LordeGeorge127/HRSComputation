@model PaymentRecordDetailViewModel
@{
    ViewBag.Title = "Payslip";
}
<div class="row">
    <div class="col-md-12 grid-margin">
        <div class="card">
            <div class="card-body">
                <div class="container-fluid d-flex justify-content-between">
                    <div class="col-md-3">
                        <p class="mt-5 mb-2 pl-0"><b>Lorde HRMS Ltd</b></p>
                        <p class="mt-5 mb-2"<br />Nairobi <br /> P.O.Box 1234</p>
                    </div>
                    <div class="col-md-3">
                        <p class="mt-5 mb-2 text-right pr-0"><b>Pay Date: @Model.PayDate.ToString("dd/MM/yyyy")</b></p>
                        <p class="mt-5 mb-2"<br />TaxCode: @Model.TaxCode <br /> Year: @Model.Year <br /> Tax No: @Model.Tax</p>
                    </div>
                    <br /><br />
                    <div class="col-md-12 row">
                        <div class="col-md-8"><h5>Employee's Name: @Model.FullName</h5></div>
                        <div class="col-md-4"><h5>TaxNo. Name: @Model.NiNo</h5></div>
                    </div>
                </div>
                <div class="row">
                    >
                    <thead class="table-dark">
                        <tr>
                            <th>Earnings</th>
                            <th>Hours</th>
                            <th>Rates</th>
                            <th>Amount</th>
                            <th>Deductions</th>
                            <th>Amount</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <td><b>Basic:</b></td>
                            <td>@Model.ContractualHours.ToString("f")</td>
                            <td>@Model.HourlyRate.ToString("f")</td>
                            <td>@Model.ContractualEarnings.ToString("f")</td>
                            <td><b>Tax:</b></td>
                            <td>@Model.Tax.ToString("f")</td>
                        </tr>
                        <tr>
                            <td><b>Overtime:</b></td>
                            <td>@Model.OverTimeHours.ToString("f")</td>
                            <td>@Model.OverTimeRate.ToString("f")</td>
                            <td>@Model.OverTimeEarnings.ToString("f")</td>
                            <td><b>Overtime:</b></td>
                            <td>@Model.NIC.ToString("C")</td>
                        </tr>
                        <tr>
                            <td></td>
                            <td></td>
                            <td></td>
                            <td></td>
                            <td><b>Union:</b></td>
                            <td>@Model.UnionFee.Value.ToString("C")</td>
                        </tr>
                        <tr>
                            <td></td>
                            <td></td>
                            <td></td>
                            <td></td>
                            <td><b>Union:</b></td>
                            <td>@Model.HELB.Value.ToString("C")</td>
                        </tr>
                        <tr>
                            <td><b>Total:</b></td>
                            <td>@Model.HoursWorked</td>
                            <td></td>
                            <td>@Model.TotalEarnings.ToString("C")</td>
                            <td></td>
                            <td>@Model.TotalDeduction.ToString("C")</td>
                        </tr>
                        <tfoot>
                            <tr>
                                <td></td>
                                <td></td>
                                <td></td>
                                <td></td>
                                <td class="table-dark"><b>NET PAY:</b></td>
                                <td>@Model.NetPayment.ToString("C")</td>
                            </tr>
                        </tfoot>
                    </tbody>
                </div>
            </div>
        </div>
    </div>
</div>