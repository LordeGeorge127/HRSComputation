@model EmployeeDetailViewModel;

<div class="col-md-12 grid-margin grid-margin-md-0">
    <div class="card">
        <div class="card-body">
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a asp-controller="Home" asp-action="Index">Home</a></li>
                    <li class="breadcrumb-item"><a asp-action="Index">Employee List</a></li>
                    <li class="breadcrumb-item active" aria-current="page">Employee Detail></li>
                </ol>
            </nav><br /> <br />
            <div class="wrapper d-flex justify-content-start justify-content-sm-center flex-wrap">
                <img class="rounded-circle shadow-lg" style="width:300px; height:350px" src="@Url.Content(Model.ImageUrl)" alt="" />
                <div class="wrap align-items-center ml-5">
                    <p class="font-weight-bold text-success " style="font-size:20px">Full Name: @Model.FullName</p>
                    <p class="font-weight-normal">Designation : @Model.Designation</p>
                    <p class="font-weight-normal">Gender: @Model.Gender</p>
                    <p class="font-weight-normal">Date of Birth: @Model.DOB.ToString("dd/MM/yyyy")</p>
                    <p class="font-weight-normal">Employee No: @Model.EmployeeNo</p>
                    <p class="font-weight-normal">Employee No: @Model.PIN</p>
                    <p class="font-weight-normal">ID No: @Model.NationalID</p>
                    <p class="font-weight-normal">NHIF No: @Model.NHIF</p>
                    <p class="font-weight-normal">Email:<a href="#"> @Model.Email</a></p>
                    <p class="font-weight-normal">Phone:<a href="tel: @Model.Phone"> @Model.Phone</a></p>
                    <br /> <br />
                    <p class="fw-weight-bold">Pay & Deductions</p>
                    <hr style="background-color:crimson" />
                    <p class="font-weight-normal">Payment Method : @Model.PaymentMethod</p>
                    <p class="font-weight-normal">Student Loan : @Model.StudentLoan</p>
                    <p class="font-weight-normal">NSSF Member : @Model.NSSFMember</p>
                    <p class="font-weight-normal"><i class="nav-icon far fa-envelope" style="margin-right:auto.6em; color:cornflowerblue"></i><a href="mailto:@Model.Email?subject=Payslip&body= Attached within is your payslip">Send Payslip</a></p>
                    <br /> <br />
                    <p class="fw-weight-bold">Address</p>
                    <hr style="background-color:crimson" />
                    <p class="font-weight-normal">City : @Model.City</p>
                    <p class="font-weight-normal">Address : @Model.Address</p>
                    <p class="font-weight-normal">Postal Code : @Model.PostCode</p>
                    <br />
                    <br />



                </div>
            </div>
        </div>
    </div>
</div>
